{% extends "VincentaleUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="panel panel-default text-center">
        <div class="panel-heading">
            <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                {% if app.user.hasContact(user) %}
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                {% else %}
                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                {% endif %}
                {%  if user.prenom != '' and user.nom != '' %}
                    {{ user.prenom }} {{ user.nom }}
                {% else %}
                    {{ user.username }}
                {% endif %}
            </h2>
        </div>
        <div class="panel-body">
            <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <strong>{{ "Nom d'utilisateur"|trans }}:</strong> {{ user.username }}</p>
            <p><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <strong>{{ 'E-mail'|trans }}:</strong> {{ user.email }}</p>
            <p><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> <strong>{{ 'Téléphone'|trans }}:</strong> {{ user.tel }}</p>
            <p><span class="glyphicon glyphicon-cloud" aria-hidden="true"></span> <strong>{{ 'Site Web'|trans }}:</strong> {{ user.website }}</p>
            <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <strong>{{ 'Adresse'|trans }}:</strong> {{ user.adress }}</p>
        </div>
        <div class="panel-footer">
            {% if app.user.hasContact(user) %}
                <a href="" class="btn btn-success disabled"><span class="glyphicon glyphicon-plus-sign"></span> Ajouter aux contacts</a>
                <a href="{{ path('vincentale_contact_del',{'id':user.id}) }}" class="btn btn-danger "><span class="glyphicon glyphicon-remove"></span> Supprimer</a>
            {% else %}
                <a href="{{ path('vincentale_contact_add',{'id':user.id}) }}" class="btn btn-success "><span class="glyphicon glyphicon-plus-sign"></span> Ajouter aux contacts</a>
                <a href="" class="btn btn-danger disabled"><span class="glyphicon glyphicon-remove"></span> Supprimer</a>
            {% endif %}
        </div>
    </div>

{% endblock fos_user_content %}