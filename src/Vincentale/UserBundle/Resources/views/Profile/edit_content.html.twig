{% trans_default_domain 'FOSUserBundle' %}


<div class="panel panel-default text-center">
    <div class="panel-heading">
        <h2>Modifier mes informations</h2>
    </div>
    <div class="panel-body">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit')}) }}
            {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.username, "Nom d'utilisateur :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control text-center'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.nom, "Nom :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control text-center'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.prenom, "Prénom :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.prenom) }}
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control text-center'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.tel, "Téléphone :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.tel) }}
            {{ form_widget(form.tel, {'attr': {'class': 'form-control text-center'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.adress, "Adresse :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.adress) }}
            {{ form_widget(form.adress, {'attr': {'class': 'form-control text-center'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.website, "Site web :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.website) }}
            {{ form_widget(form.website, {'attr': {'class': 'form-control text-center'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, "e-mail :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control text-center'}}) }}
        </div>

        <input class="btn btn-primary" type="submit" value="Modifier" />
        {{ form_end(form) }}
    </div>


</div>

