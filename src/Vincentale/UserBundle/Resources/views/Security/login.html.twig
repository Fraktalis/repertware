{% extends "VincentaleUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="well text-center">
        {% if error %}
            <div class="alert alert-danger">{{ error.message|trans }}</div>
        {% endif %}
        <h2>Connexion</h2>
        <form action="{{ path('fos_user_security_check') }}" method="post">
            <div class="form-group">
                <label for="username">Login :</label>
                <input type="text" class="form-control text-center" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input type="password" class="form-control text-center" id="password" name="_password" />
            </div>
            <div class="checkbox">

                <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />Se souvenir de moi</label>
                <br>
                <br>
            </div>
                <input class="btn btn-primary btn-lg" type="submit" value="Se connecter" />
        </form>
    </div>
{% endblock fos_user_content %}
